# Lombok configuration for backend project
# https://projectlombok.org/features/configuration

# Add @Generated to generated code (helps tools ignore Lombok code; e.g. coverage, some linters)
config.stopBubbling = true
lombok.addLombokGeneratedAnnotation = true

# @Data: do not call super in equals/hashCode (default for most entities)
lombok.equalsAndHashCode.callSuper = skip

# Logging: use "log" as the field name for @Slf4j, @Log, etc.
lombok.log.fieldName = log

# Constructor: do not add @ConstructorProperties (cleaner with Jackson/JSON)
lombok.anyConstructor.suppressConstructorProperties = true

# Null checks: make @NonNull generate null-check in setter (explicit fail-fast)
lombok.nonNull.exceptionType = IllegalArgumentException
